{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist/lib",
        "target": "es2020",
        "module": "es2020",
        "lib": [
            "DOM",
            "es2020"
        ],
        "incremental": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "pretty": true,
        "removeComments": true,
        "sourceMap": false,
        "declaration": true,
        "declarationMap": true,
        "downlevelIteration": true,
        "importsNotUsedAsValues": "error",
        "importHelpers": true,
        "stripInternal": true,
        "noEmit": false,
        "skipLibCheck": true
    }
}
